generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OPT_Party {
  PTY_ID        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  PTY_FirstName String  @db.VarChar(100)
  PTY_LastName  String  @db.VarChar(100)
  PTY_Phone     String? @db.VarChar(20)
  PTY_SSN       String? @db.VarChar(20)
  PTY_Gender    String? @db.VarChar(20)
  PTY_Age       Int?

  @@index([PTY_Gender])
  @@index([PTY_Age])
}
